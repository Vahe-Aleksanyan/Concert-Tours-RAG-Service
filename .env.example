# --------------------------------------------------
# .env.example
# --------------------------------------------------

# ─── OpenAI Settings ──────────────────────────────
# Your OpenAI API key (required)
OPENAI_API_KEY=------

# Model to use for chat/completions
MODEL_NAME=gpt-4o-mini
# Sampling temperature: 0.0 (deterministic) → 1.0 (very random)
TEMPERATURE=0.2

# ─── Chroma Vector Store ──────────────────────────
# Hostname or service name where Chroma is running
CHROMA_HOST=chroma
# Port on which Chroma’s HTTP API listens
CHROMA_PORT=8000
# Directory inside the container (or volume) where Chroma persists its data
CHROMA_PERSIST_DIR=chroma/chroma
# How many documents to retrieve for each query
RETRIEVAL_K=10

# ─── API Server Settings ──────────────────────────
# The host/IP your FastAPI (or similar) app should bind to
API_HOST=0.0.0.0
# The port for your ingest/query endpoints
API_PORT=8003

# ─── CORS / Allowed Origins ───────────────────────
# JSON‑encoded list of allowed origins for browser-based clients
ALLOW_ORIGINS='["http://localhost","http://127.0.0.1"]'
