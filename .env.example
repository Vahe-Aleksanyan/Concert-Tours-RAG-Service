# --------------------------------------------------
# .env.example
# --------------------------------------------------

# ─── OpenAI Settings ──────────────────────────────
# Your OpenAI API key (required)
OPENAI_API_KEY=your-openai-api-key

# Model to use for chat/completions
MODEL_NAME=gpt-4o-mini
# Sampling temperature: 0.0 (deterministic) → 1.0 (very random)
TEMPERATURE=0.2

# ─── Chroma Vector Store ──────────────────────────
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=/chroma/.chroma
RETRIEVAL_K=10

# ─── API Server Settings ──────────────────────────
API_HOST=0.0.0.0
API_PORT=8003

# ─── CORS / Allowed Origins ───────────────────────
ALLOW_ORIGINS='["http://localhost","http://127.0.0.1"]'

# ─── Serper API for artist lookup (bonus) ────────
SERPAPI_KEY=your-serper-api-key
SERPAPI_URL=https://google.serper.dev/search
